# Telegram Bot Token (from @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000

# Download directory (relative or absolute)
DOWNLOAD_DIR=./downloads

# Max downloadable file size in MB (default: 200)
MAX_FILE_SIZE_MB=200

# Max concurrent downloads (default: 2)
MAX_CONCURRENT_DOWNLOADS=2

# Cookie support for Twitter/X and auth-gated platforms
# Option 1: Extract cookies from your browser (recommended)
# Values: chrome, firefox, safari, edge, brave
# COOKIES_BROWSER=chrome

# Option 2: Use a Netscape-format cookies.txt file
# COOKIES_FILE=./cookies.txt

# Firebase Configuration (for Google Auth + Firestore)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
